<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{yyyy:MM:dd HH:mm:ss} [%thread] %highlight %-5level %logger{%method : %line} - %msg%n</Pattern>
    </layout>
  </appender>
   
  <logger name="com.apik" level="TRACE"/>
   
 
  <root level="TRACE">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>